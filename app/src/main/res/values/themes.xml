<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PolarAlertAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>
    <style name="Theme.PolarAlertAndroid" parent="Base.Theme.PolarAlertAndroid" />

    <style name="Theme.PolarAlertAndroid.Activity" parent="Theme.PolarAlertAndroid">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Polar.Button" parent="@style/Widget.Material3.Button">
        <item name="android:height">70dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Polar.LoadingIndicator" parent="@style/Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorSize">70dp</item>
        <item name="indicatorInset">0dp</item>
        <item name="indicatorColor">@color/white</item>
        <item name="trackThickness">1dp</item>
    </style>

    <style name="Polar.Slider" parent="@style/Widget.Material3.Slider">
        <item name="android:stepSize">1.0</item>
        <item name="haloColor">@color/transparent</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbColor">@color/black</item>
        <item name="thumbRadius">20dp</item>
        <item name="thumbStrokeColor">@color/white</item>
        <item name="thumbStrokeWidth">1dp</item>
        <item name="tickVisible">false</item>
        <item name="trackColorActive">@color/red</item>
        <item name="trackHeight">1dp</item>
    </style>

    <style name="Polar.Text.Base" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Polar.Text.XL" parent="Polar.Text.Base">
        <item name="android:textSize">@dimen/font_size_xl</item>
    </style>
    <style name="Polar.Text.L" parent="Polar.Text.Base">
        <item name="android:textSize">@dimen/font_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Polar.Text.M" parent="Polar.Text.Base">
        <item name="android:textSize">@dimen/font_size_m</item>
    </style>
    <style name="Polar.Text.S" parent="Polar.Text.Base">
        <item name="android:textSize">@dimen/font_size_s</item>
    </style>
</resources>